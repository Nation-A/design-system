{
  "name": "@nation-a/tokens",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "gen:types": "tsx src/scripts/generate-token-types.ts",
    "gen:tokens": "tsx src/scripts/parse-tokens.ts",
    "prebuild": "npm run gen:types && npm run gen:tokens",
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "json-to-ts": "^2.1.0",
    "tsup": "^6.7.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  }
}
